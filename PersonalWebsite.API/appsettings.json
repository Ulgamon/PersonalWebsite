{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "AmazonCloudWatch",
        "Args": {
          "logGroup": "your-app",
          "logStreamPrefix": "environment/component",
          "restrictedToMinimumLevel": "Verbose"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
